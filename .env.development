# Development environment configuration

# API Configuration
REACT_APP_API_URL=http://localhost:3000

# Screen Configuration  
REACT_APP_SCREEN_ID=display-1

# CORS Proxy Configuration
# Enable this when experiencing CORS errors during development
REACT_APP_USE_CORS_PROXY=false
REACT_APP_CORS_PROXY_URL=https://cors-anywhere.herokuapp.com/

# Feature Flags
REACT_APP_ENABLE_OFFLINE_MODE=true
REACT_APP_ENABLE_DEBUG_MODE=true

REACT_APP_VERSION=$npm_package_version
REACT_APP_NAME=$npm_package_name
REACT_APP_NODE_ENV=development

# URL for linking back to admin portal
REACT_APP_ADMIN_URL=http://localhost:3000

# Override logging levels
REACT_APP_LOG_LEVEL=debug

# Disable ESLint errors in development
ESLINT_NO_DEV_ERRORS=true
DISABLE_ESLINT_PLUGIN=true

# Default test pairing code for development
REACT_APP_DEFAULT_PAIRING_CODE=123456 