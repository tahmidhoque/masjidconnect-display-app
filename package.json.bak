{
  "name": "masjidconnect-display-app",
  "version": "0.1.0",
  "private": true,
  "main": "electron/main.js",
  "description": "MasjidConnect Display App - Digital signage solution for mosques",
  "author": "MasjidConnect",
  "homepage": "./",
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@mui/icons-material": "^5.17.0",
    "@mui/material": "^5.17.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.18.30",
    "@types/react": "^18.2.6",
    "@types/react-dom": "^18.2.4",
    "axios": "^1.4.0",
    "date-fns": "^4.1.0",
    "dayjs": "^1.11.13",
    "electron-log": "^5.1.0",
    "electron-store": "^10.0.1",
    "electron-updater": "^6.1.7",
    "localforage": "^1.10.0",
    "moment": "^2.30.1",
    "momentjs": "^2.0.0",
    "notistack": "^3.0.2",
    "qrcode.react": "^4.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.11.1",
    "react-scripts": "5.0.1",
    "typescript": "^4.9.5",
    "web-vitals": "^2.1.4",
    "workbox-core": "^6.5.4",
    "workbox-precaching": "^6.5.4",
    "workbox-routing": "^6.5.4",
    "workbox-strategies": "^6.5.4"
  },
  "scripts": {
    "start": "PORT=3001 react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron:dev": "concurrently \"cross-env BROWSER=none npm start\" \"wait-on --timeout 60000 http://localhost:3001 && cross-env ELECTRON_DEBUG=true electron .\"",
    "electron:build": "npm run build && electron-builder build --publish never",
    "electron:build:publish": "npm run build && electron-builder build --publish always",
    "electron:start": "electron .",
    "electron:build:armhf": "npm run build && electron-builder build --linux deb --armv7l",
    "electron:build:arm64": "npm run build && electron-builder build --linux deb --arm64",
    "electron:build:pi": "npm run build && electron-builder build --linux deb --armv7l --arm64",
    "electron:build:pi:publish": "npm run build && electron-builder build --linux deb --armv7l --arm64 --publish always"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^6.5.1",
    "cross-env": "^7.0.3",
    "electron": "^35.1.2",
    "electron-builder": "^24.13.3",
    "wait-on": "^6.0.1"
  },
  "build": {
    "appId": "com.masjidconnect.display",
    "productName": "MasjidConnect Display",
    "files": [
      "build/**/*",
      "electron/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "executableName": "masjidconnect-display",
      "artifactName": "masjidconnect-display-${version}-${arch}.${ext}",
      "synopsis": "Digital signage display for mosques",
      "description": "MasjidConnect Display App for showing prayer times and announcements",
      "desktop": {
        "Name": "MasjidConnect Display",
        "Comment": "Digital signage for mosques",
        "Categories": "Utility;Education;",
        "StartupWMClass": "masjidconnect-display"
      }
    },
    "deb": {
      "compression": "xz",
      "fpm": ["--deb-no-default-config-files", "--after-install=build/after-install.sh"]
    },
    "afterPack": "./build/afterPack.js",
    "publish": {
      "provider": "github",
      "owner": "masjidSolutions",
      "repo": "masjidconnect-display-app",
      "releaseType": "release"
    }
  }
}
