# MasjidConnect Display App - Environment Variables
# Copy this file to .env and update with your values
# Note: .env files are gitignored and should not be committed

# =============================================================================
# REQUIRED FOR PRODUCTION BUILDS
# =============================================================================

# Main API endpoint URL
# Used throughout the app for API calls to MasjidConnect backend
# Default fallback: https://portal.masjidconnect.co.uk/api
REACT_APP_API_URL=https://portal.masjidconnect.co.uk/api

# =============================================================================
# OPTIONAL - Realtime/WebSocket Configuration
# =============================================================================

# WebSocket server URL for real-time communication
# Default: https://realtime.masjidconnect.co.uk (production) / ws://localhost:3002 (development)
REACT_APP_REALTIME_URL=https://realtime.masjidconnect.co.uk

# WebSocket authentication token
# Used for authenticating WebSocket connections
REACT_APP_AUTH_TOKEN=

# =============================================================================
# AUTOMATICALLY SET (No action needed)
# =============================================================================

# REACT_APP_VERSION - Automatically set from package.json during build
# NODE_ENV - Automatically set by react-scripts (production/development)
# PUBLIC_URL - Automatically set by react-scripts

# =============================================================================
# OPTIONAL - Development/Debugging
# =============================================================================

# Enable CORS proxy in development mode only
# Only used when NODE_ENV=development
REACT_APP_USE_CORS_PROXY=false

# CORS proxy URL (only used if REACT_APP_USE_CORS_PROXY=true)
REACT_APP_CORS_PROXY_URL=https://cors-anywhere.herokuapp.com/

# Optional environment override (development/production)
# If set, overrides NODE_ENV for environment detection
# REACT_APP_ENV=development

# =============================================================================
# OPTIONAL - Electron-Specific
# =============================================================================

# Enable Electron debug mode (enables DevTools)
ELECTRON_DEBUG=false

# Electron updater channel (latest, beta, or alpha)
UPDATE_CHANNEL=latest

# Disable automatic update checks (set to any value to disable)
# DISABLE_UPDATES=true
